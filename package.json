    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": ">=25.0.0",
    "prettier": "^2.1.2",
    "ts-jest": ">=25.0.0",
    "typescript": ">=3.9.5"
